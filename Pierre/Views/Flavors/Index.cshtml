@{
  Layout = "_Layout";
}

@using Pierre.Models;

<div class="container" id="flavor-container2">

  <h1>Flavors</h1>
  <hr />
  <ul class="flavor-list">

    @if (@Model.Count == 0)
    {
      <h3>There are no flavors yet.</h3>
    }

    @foreach (Flavor Flavor in Model)
    {
      <li>@Html.ActionLink($"{Flavor.FlavorName}", "Details", new { id = Flavor.FlavorId })</li>
    }

  </ul>
  <br />
  <button class="flavor-button" role="button">@Html.ActionLink("Add new Flavor", "Create")</button>

</div>